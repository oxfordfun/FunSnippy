manifest {
    description = 'Run Snippy with Containers'
}

profiles{
    debug{
        process {
            errorStrategy = 'retry'
            maxerrors = 1
        }
    }
    
    standard{
        process {
            errorStrategy = 'ignore'
            maxerrors = 1
        }
    }

    docker {
        docker {
            enabled = true
        }
        process {
            container = 'staphb/snippy:4.4.5'
        }
    }

    singularity {
        singularity {
            enabled = true
        }
        process {
            container = '/data/images/snippy-4.4.5.img'
        }
    }
}